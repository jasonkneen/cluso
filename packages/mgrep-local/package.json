{
  "name": "@ai-cluso/mgrep-local",
  "version": "1.0.0",
  "description": "Local semantic code search using transformer embeddings and vector similarity",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js",
      "require": "./dist/mcp/index.js",
      "default": "./dist/mcp/index.js"
    },
    "./electron": {
      "types": "./dist/electron/index.d.ts",
      "import": "./dist/electron/index.js",
      "require": "./dist/electron/index.js",
      "default": "./dist/electron/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "mgrep-local": "dist/mcp/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "npx tsx src/mcp/cli.ts",
    "start": "node dist/mcp/cli.js",
    "clean": "rm -rf dist",
    "link": "npm run build && npm link",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "search",
    "semantic",
    "embeddings",
    "transformers",
    "vector-database",
    "lancedb",
    "mcp",
    "code-search"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkneen/flows.git",
    "directory": "ai-cluso/packages/mgrep-local"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@lancedb/lancedb": "^0.22.3",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@xenova/transformers": "^2.17.0",
    "apache-arrow": "^18.1.0",
    "node-llama-cpp": "^3.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
