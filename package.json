{
  "name": "ai-cluso",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ai-cluso/fast-apply": "file:packages/fast-apply",
    "@ai-cluso/mgrep-local": "file:packages/mgrep-local",
    "@ai-sdk/anthropic": "^2.0.50",
    "@ai-sdk/google": "^2.0.44",
    "@ai-sdk/mcp": "^0.0.11",
    "@ai-sdk/openai": "^2.0.74",
    "@ai-sdk/react": "^2.0.104",
    "@anthropic-ai/claude-agent-sdk": "^0.1.58",
    "@anthropic/lsp-client": "file:packages/lsp",
    "@google/genai": "^1.30.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@types/diff-match-patch": "^1.0.36",
    "ai": "^5.0.104",
    "better-sqlite3": "^12.5.0",
    "bippy": "0.5.16",
    "buffer": "^6.0.3",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff-match-patch": "^1.0.5",
    "electron-updater": "^6.6.2",
    "glob": "^13.0.0",
    "lucide-react": "^0.555.0",
    "motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shiki": "^3.17.0",
    "streamdown": "^1.6.9",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx-source": "^7.27.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.2.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.14",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.cluso.desktop",
    "productName": "Cluso",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.ai-cluso.com"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
