{
  "name": "cluso",
  "version": "0.1.3",
  "description": "Cluso AI coding assistant with intelligent element selection and automation",
  "author": "Jason Kneen",
  "license": "AGPL-3.0-or-later WITH Commons-Clause",
  "type": "module",
  "main": "electron/main.cjs",
  "bin": {
    "cluso": "./bin/cluso.cjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "bin/",
    "dist/",
    "electron/",
    "public/icon.png",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "npm run clean && NODE_ENV=production vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist release node_modules/.vite",
    "analyze": "node scripts/analyze-bundle-size.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:prebuild": "mkdir -p node_modules/@img/sharp-darwin-x64 node_modules/@img/sharp-linux-x64 node_modules/@img/sharp-win32-x64",
    "electron:build": "npm run electron:prebuild && npm run build:prod && electron-builder",
    "electron:build:mac": "npm run electron:prebuild && npm run build:prod && electron-builder --mac",
    "electron:build:win": "npm run electron:prebuild && npm run build:prod && electron-builder --win",
    "electron:build:linux": "npm run electron:prebuild && npm run build:prod && electron-builder --linux",
    "serve:dev": "npm run build && npm run serve:copy-public && npm -w cluso run dev",
    "serve:build": "npm run build && npm run serve:copy-public && npm -w cluso run build",
    "serve:copy-public": "rm -rf packages/serve/public && cp -r dist packages/serve/public",
    "serve:start": "npm -w cluso run start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ai-cluso/fast-apply": "file:packages/fast-apply",
    "@ai-cluso/mgrep-local": "file:packages/mgrep-local",
    "@ai-cluso/shared-audio": "file:packages/shared-audio",
    "@ai-cluso/shared-inspector": "file:packages/shared-inspector",
    "@ai-cluso/shared-tools": "file:packages/shared-tools",
    "@ai-cluso/shared-types": "file:packages/shared-types",
    "@ai-sdk/anthropic": "^2.0.50",
    "@ai-sdk/google": "^2.0.44",
    "@ai-sdk/mcp": "^0.0.11",
    "@ai-sdk/openai": "^2.0.74",
    "@ai-sdk/react": "^2.0.104",
    "@anthropic-ai/claude-agent-sdk": "0.1.63",
    "@anthropic/lsp-client": "file:packages/lsp",
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/genai": "^1.30.0",
    "@hookform/resolvers": "^5.2.2",
    "@lydell/node-pty": "^1.1.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@morphllm/morphsdk": "^0.2.57",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@remixicon/react": "^4.7.0",
    "@tiptap/extension-bubble-menu": "^3.13.0",
    "@tiptap/extension-code-block-lowlight": "^3.13.0",
    "@tiptap/extension-color": "^3.13.0",
    "@tiptap/extension-heading": "^3.13.0",
    "@tiptap/extension-horizontal-rule": "^3.13.0",
    "@tiptap/extension-image": "^3.13.0",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/extension-placeholder": "^3.13.0",
    "@tiptap/extension-text-style": "^3.13.0",
    "@tiptap/extension-typography": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@types/diff-match-patch": "^1.0.36",
    "ai": "^5.0.104",
    "better-sqlite3": "^12.5.0",
    "bippy": "^0.5.16",
    "buffer": "^6.0.3",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "diff-match-patch": "^1.0.5",
    "electron-liquid-glass": "^1.1.1",
    "electron-updater": "^6.6.2",
    "elkjs": "^0.11.0",
    "ghostty-web": "^0.4.0",
    "glob": "^13.0.0",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.556.0",
    "motion": "^12.23.24",
    "react": "^19.2.0",
    "react-day-picker": "^9.12.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.68.0",
    "react-medium-image-zoom": "^5.4.0",
    "shiki": "^3.17.0",
    "sonner": "^2.0.7",
    "streamdown": "^1.6.9",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "v0-sdk": "^0.15.3",
    "ws": "^8.18.3",
    "zod": "^3.25.76",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx-source": "^7.27.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "recast": "^0.23.11",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.14",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.cluso.desktop",
    "productName": "Cluso",
    "directories": {
      "output": "release"
    },
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "nativeRebuilder": "sequential",
    "nodeGypRebuild": false,
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!**/node_modules/*/{test,__tests__,tests,example,examples,docs,doc}",
      "!**/node_modules/*/{README.md,readme.md,CHANGELOG.md,LICENSE,LICENCE,*.ts}",
      "!**/node_modules/*/.{git,github,gitlab,svn,hg}",
      "!**/node_modules/*/.*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj,md}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes}",
      "!**/*.map",
      "!**/node_modules/@lancedb/**/*",
      "!**/node_modules/onnxruntime-node/**/*",
      "!**/node_modules/@xenova/**/*",
      "!**/node_modules/node-llama-cpp/**/*",
      "!**/node_modules/@node-llama-cpp/**/*",
      "!**/node_modules/apache-arrow/**/*",
      "!**/node_modules/@ai-cluso/mgrep-local/**/*",
      "!**/node_modules/sharp/**/*",
      "!**/node_modules/@img/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/@lydell/node-pty/**/*",
      "node_modules/@anthropic-ai/**/*",
      "node_modules/@modelcontextprotocol/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "jasonkneen",
        "repo": "cluso"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ],
      "minimumSystemVersion": "11.0",
      "type": "distribution",
      "darkModeSupport": true,
      "notarize": false,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraFiles": [],
      "extraResources": []
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
